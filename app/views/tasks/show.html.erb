<%= render "shared/partial" %>

<h3 class="display-6">予定の詳細</h3>

<%= form_with model: @task do |f| %>
  <table>
    <tr>
      <th>開始日</th>
      <td><%= @task.start_date.strftime("%Y/%m/%d") if @task.start_date.present? %></td>
    </tr>

    <tr>
      <th>終了日</th>
      <td><%= @task.end_date.strftime("%Y/%m/%d") if @task.end_date.present? %></td>
    </tr>

    <tr>
      <th>終日</th>
      <td><%= @task.is_all_day ? '◯': '' %></td>
    </tr>

    <tr>
      <th>スケジュールメモ</th>
      <td><%= @task.memo %></td>
    </tr>
  </table>

<% end %>

<p><%= link_to  "予定の編集", edit_task_path(@task) %></p>
<%= link_to "一覧に戻る", :tasks %>

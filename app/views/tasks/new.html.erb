<%= render "shared/partial" %>

<div class="d-flex justify-content-center align-items-center ">
  <section class="FormWrapper table table-bordered table-striped table-hover p-4" style="width: 100%; max-width: 600px;">
    <h3 class="display-6  mb-4">予定の新規追加</h3>

    <%= form_with model: @task do |f| %>
      <% if @task.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h4><%= pluralize(@task.errors.count, "error") %> が発生しました:</h4>
          <ul>
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <tr>
            <th><%= f.label :title, "タイトル", class: "col-form-label" %></th>
            <td><%= f.text_field :title, class: "form-control" %></td>
          </tr>

           <tr>
            <th><%= f.label :start_date, "開始日", class: "col-form-label" %></th>
            <td><%= f.date_field :start_date, class: "form-control " %></td>
          </tr>

          <tr>
            <th><%= f.label :end_date, "終了日", class: "col-form-label" %></th>
            <td><%= f.date_field :end_date, class: "form-control" %></td>
          </tr>
          

          <tr>
            <th><%= f.label :is_all_day, "終日の場合はチェックを入れます", class: "col-form-label" %></th>
            <td><%= f.check_box :is_all_day, class: "form-check-input" %></td>
          </tr>

          <tr>
            <th><%= f.label :memo, "スケジュールメモ", class: "col-form-label" %></th>
            <td><%= f.text_area :memo, class: "form-control" %></td>
          </tr>
        </table>
      </div>

      <div class="form-group text-center">
        <%= f.submit "登録完了する", class: "btn btn-primary" %>
        <%= link_to "予定一覧に戻る", tasks_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </section>
</div>

